<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Form view -->
        <record id="general_ledger_view" model="ir.ui.view">
            <field name="name">General Ledger</field>
            <field name="model">general.ledger</field>
            <field name="arch" type="xml">
            <form string="Report Options">
	            <group>
	            	<group>
	                	<field name="target_move" widget="radio"/>
	                	<field name="account_id"/>
	                </group>
	                <group>
		                <field name="date_from"/>
		                <field name="date_to"/>
	                </group>
	            </group>
	            <group>
	                <field name="journal_ids" widget="many2many_tags" options="{'no_create': True}"/>
	            </group>
	            <footer>
	                <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
	                or 
	                <button string="Cancel" class="oe_link" special="cancel" />
	            </footer>
	        </form>
            </field>
        </record>

        <!-- Action -->
        <record id="general_ledger_action" model="ir.actions.act_window">
            <field name="name">General Ledger</field>
            <field name="res_model">general.ledger</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="general_ledger_view"/>
            <field name="target">new</field>
        </record>
    </data>
</openerp>
