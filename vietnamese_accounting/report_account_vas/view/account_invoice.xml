<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <function model="account.invoice" name="delete_view_inherit"></function>
        <!-- Invoice Supplier -->
        <record id="invoice_supplier_form" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form (trobz_account_vas)</field>
            <field name="model">account.invoice</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <field name="date_invoice" position="replace"/>
                <field name="supplier_invoice_number" position="replace"/>
                <field name="origin" position="replace"/>
                <field name="account_id" position="replace"/>
                <field name="fiscal_position" position="replace"/>

                <field name="partner_id" position="after">
                    <field name="prefix"/>
                    <field name="template_prefix"/>
                    <field name="supplier_invoice_number"/>
                    <field name="origin"/>
                </field>

                <field name="journal_id" position="after">
                     <field domain="[('company_id', '=', company_id), ('type', '=', 'payable')]"
                            name="account_id" groups="account.group_account_user"/>
                </field>
                <field name="date_due" position="before">
                    <field name="creation_date"/>
                    <field name="date_invoice"/>
                </field>

                <field name="check_total" position="after">
                    <field name="fiscal_position" widget="selection" />
                </field>

                <xpath expr="//field[@name = 'invoice_line']/tree/field[@name = 'price_subtotal']" position="after">
                    <field name="tax_type" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name = 'invoice_line']/tree/field[@name = 'invoice_line_tax_id']" position="attributes">
                    <attribute name="on_change">onchange_tax_id(invoice_line_tax_id, context)</attribute>
                </xpath>
