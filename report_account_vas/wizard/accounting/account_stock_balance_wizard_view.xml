<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Form view -->
        <record id="account_stock_balance_wizard_view" model="ir.ui.view">
            <field name="name">Print Stock Balance Wizard</field>
            <field name="model">account.stock.balance.wizard</field>
            <field name="inherit_id" ref="account.account_common_report_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/group" position="replace">
                    <group>
                        <group>
                            <field name="company_id" invisible="1"/>
                            <field name="target_move"/>
                        </group>
                        <group>
                            <field name="account"/>
                            <field name="location_id"/>
                        </group>
                    </group>
                </xpath>
                <button name="check_report" position="attributes">
                    <attribute name="name">print_report</attribute>
                </button>
            </field>
        </record>
        <!-- Action -->
        <record id="account_stock_balance_wizard_action" model="ir.actions.act_window">
            <field name="name">Stock Balance</field>
            <field name="res_model">account.stock.balance.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_stock_balance_wizard_view"/>
            <field name="target">new</field>
        </record>
    </data>
</openerp>
