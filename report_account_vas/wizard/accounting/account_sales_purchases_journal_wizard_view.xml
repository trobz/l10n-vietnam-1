<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Form view -->
        <record id="sales_purchases_journal_wizard_view" model="ir.ui.view">
            <field name="name">Sales/Purchases Journal</field>
            <field name="model">sales.purchases.journal.wizard</field>
            <field name="inherit_id" ref="account.account_common_report_view"/>
            <field name="arch" type="xml">
                <button name="check_report" position="attributes">
                    <attribute name="name">print_report</attribute>
                </button>
            </field>
        </record>

        <!-- Action -->
        <record id="sales_purchases_journal_wizard_action" model="ir.actions.act_window">
            <field name="name">Sales/Purchases Journal</field>
            <field name="res_model">sales.purchases.journal.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="sales_purchases_journal_wizard_view"/>
            <field name="target">new</field>
        </record>
    </data>
</openerp>
