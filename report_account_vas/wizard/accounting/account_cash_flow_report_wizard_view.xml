<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Form view -->
        <record id="view_cash_flow_report_wizard_form" model="ir.ui.view">
            <field name="name">view_cash_flow_report_wizard_form</field>
            <field name="model">account.cash.flow.report.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="company_id" readonly="0" required="1" />
                    </group>
                    <group>
                        <group>
                            <field name="target_move" widget="radio" />
                        </group>
                        <group>
                            <field name="date_from" required="1" />
                            <field name="date_to" required="1" />
                        </group>
                    </group>
                    <footer>
                        <button name="check_report" string="Print"
                            type="object" default_focus="1" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link"
                            special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>
