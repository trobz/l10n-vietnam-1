<?xml version="1.0" encoding="utf-8"?>
<openerp>
     <data>

        <record id="accounting_balance_sheet_view" model="ir.ui.view">
            <field name="name">Account Balance Sheet</field>
            <field name="model">account.balance.sheet</field>
            <field name="arch" type="xml">
                <form string="Report Balance Sheet">
                    <group>
                        <field name="company_id" widget="selection" required="1" readonly="0"
                                context="{'user_preference': True}"/>
                        <field name="target_move" class="oe_inline" widget="radio"/>
                        <field name="date_from" class="oe_inline" required="1"/>
                        <field name="date_to" class="oe_inline" required="1"/>
                    </group>

                    <footer>
                        <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_account_report_balance_sheet" model="ir.actions.act_window">
             <field name="name">Balance Sheet</field>
             <field name="res_model">account.balance.sheet</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">form</field>
             <field name="view_id" ref="accounting_balance_sheet_view"/>
             <field name="target">new</field>
        </record>

    </data>
</openerp>
