    <data>

           <!--Inherit Purchase Receipts  -->
        <record id="view_purchase_receipt_form_inherit" model="ir.ui.view">
            <field name="name">view.purchase.receipt.form.inherit</field>
            <field name="model">account.voucher</field>
            <field name="inherit_id" ref="account_voucher.view_purchase_receipt_form"/>
            <field name="arch" type="xml">
                <field name="date" position="replace" />
                <field name="company_id" position="replace" />
                <field name="account_id" position="replace" />
                <field name="name" position="replace"/>
                <field name="reference" position="replace"/>

                <field name="partner_id" position="after">
                    <field name="prefix"/>
                    <field name="template_prefix"/>
                    <field name="invoice_num"/>
                    <field name="pay_now" on_change="onchange_payment(pay_now, journal_id, partner_id)" required="1"/>
                    <field name="reference" string="Payment Ref#"/>
                </field>

                <field name="journal_id" position="before">
                    <field name="creation_date"/>
                    <field name="date" on_change="onchange_date(date, currency_id, currency_id, amount, company_id, context)"/>
                </field>

                <field name="journal_id" position="after">
                    <field name="account_id" domain="[('type', 'in', ['liquidity', 'payable'])]"/>
                    <field name="name"/>
                    <field name="company_id"/>
                </field>

                <field name="date_due" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>

                <field name="tax_amount" position="after">
                    <field name="tax_type" invisible="1"/>
                </field>

