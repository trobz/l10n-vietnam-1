        <!--Inherit Sales Receipts  -->
        <record id="view_sale_receipt_form_inherit" model="ir.ui.view">
            <field name="name">view.sale.receipt.form.inherit</field>
            <field name="model">account.voucher</field>
            <field name="inherit_id" ref="account_voucher.view_sale_receipt_form"/>
            <field name="arch" type="xml">
                <field name="date" position="replace" />
                <field name="company_id" position="replace" />
                <field name="account_id" position="replace" />
                <field name="partner_id" position="after">
                    <field name="prefix"/>
                    <field name="template_prefix"/>
                    <field name="invoice_num"/>

                </field>

                <field name="journal_id" position="before">
                    <field name="creation_date"/>
                    <field name="date"  on_change="onchange_date(date, currency_id, currency_id, amount, company_id, context)"/>
                </field>

                <field name="journal_id" position="after">
                    <field name="account_id"
                                  domain="[('type','in', ['liquidity', 'receivable'])]"/>

                </field>

                <field name="name" position="after">
                    <field name="company_id" widget="selection" groups="base.group_multi_company"/>
                </field>

                <field name="tax_amount" position="after">
                    <field name="tax_type" invisible="1"/>
                </field>

                <field name="reference" position="attributes">
                    <attribute name="string">Payment Ref#</attribute>
                </field>
