            name="report_trial_balance_xlsx" file="report_trial_balance_xlsx"
            attachment_use="False" />

        <!-- Cash Flow (Direct) -->
        <report id="report_cash_flow_direct_xlsx" model="account.cash.flow.report.wizard"
